<h1>Produkte nach Nachhaltigkeit filtern</h1>

<div class="filters">
    <h3>Filter</h3>

    <label>Suche: <input type="text" placeholder="Produktname" /></label><br />

    <label>CO₂-Grenze: <input type="number" value="2.0" step="0.1" /> kg</label><br />

    <label>Labels (mehrfach wählbar):</label>
    <select name="labels" multiple>
        {{#each availableLabels}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select><br />

    <label>Kontroverse Branchen ausschließen (mehrfach wählbar):</label>
    <select name="controversy" multiple>
        {{#each availableControversies}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>

    <label for="rating">Bewertung (1-5 Sterne):</label>
    <select id="rating" name="rating" required>
        <option value="1">★☆☆☆☆</option>
        <option value="2">★★☆☆☆</option>
        <option value="3">★★★☆☆</option>
        <option value="4">★★★★☆</option>
        <option value="5">★★★★★</option>
    </select>
</div>

<div class="product-list">
    <h3>Produktliste</h3>
    {{#each produkte}}
        <div class="product-item">
            <h4>{{produkt}}</h4>
            <p><strong>Marke:</strong> {{marke}}</p>
            <p><strong>Herkunft:</strong> {{herkunftsland}}</p>
            <p>
                {{#each labels}}
                    <span class="label">{{this}}</span>
                {{/each}}
            </p>
            {{#if controversy}}
                <p>
                    {{#each controversy}}
                        <span class="controversy">{{this}}</span>
                    {{/each}}
                </p>
            {{/if}}
        </div>
    {{/each}}
</div>